<!-- app/views/users/spotify.html.erb -->

<div class="container">
  <h1 class="page-header">User Page <%= @name %></h1>
  <p>Hey thanks for using this app! Now I know a little bit about your music tastes. To save on some time, I only took two of your playlists. -Ryan</p>
</div>

<div class="container">
  <h3>Playlists grabbed:</h3>
  <ul>
    <% @playlists.each do |pl| %>
    <li>
      <%= pl.name %>
    </li>
    <% end %>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-3 col-lg-3">
      <h3>Artists you listen to:</h3>
      <ul>
        <% @artists.each do |artist| %>
        <li>
          <%= artist.name %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-6 col-md-3 col-lg-3">
      <h3>Genres you listen to:</h3>
      <ul>
        <% @genres.each do |genre| %>
        <li>
          <%= genre.name %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
